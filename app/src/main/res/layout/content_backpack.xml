<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.sweepbomb.BackpackAc"
    tools:showIn="@layout/activity_backpack">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/cardTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:text="11"
                />
            <TextView android:id="@+id/cardTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:text="11"
               />

            <TextView android:id="@+id/cardTv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:text="11"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button android:id="@+id/cardBu1"
                android:layout_width="100sp"
                android:layout_height="150sp"
                android:text="卡片1"
                />


            <Button android:id="@+id/cardBu2"
                android:layout_width="100sp"
                android:layout_height="150sp"
                android:text="卡片2"
                />


            <Button android:id="@+id/cardBu3"
                android:layout_width="100sp"
                android:layout_height="150sp"
                android:text="卡片3"
                 />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button android:id="@+id/cardBu4"
                android:layout_width="100sp"
                android:layout_height="150sp"
                android:text="卡片4"

                android:layout_below="@+id/cardBu2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button android:id="@+id/cardBu5"
                android:layout_width="100sp"
                android:layout_height="150sp"
                android:text="卡片5"

               />
            <Button android:id="@+id/cardBu6"
                android:layout_width="100sp"
                android:layout_height="150sp"
                android:text="卡片6"
                android:layout_marginBottom="85dp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
