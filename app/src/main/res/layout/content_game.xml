<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.sweepbomb.GameAc"
    tools:showIn="@layout/activity_game">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <Button android:id="@+id/gaStartBu"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="開始"

        />
    <Button android:id="@+id/gaStopBu"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="暫停"
        android:layout_above="@+id/gaCard3"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/flagBu"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:text="旗子"
        android:layout_above="@+id/gaCard3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </LinearLayout>

    <Button android:id="@+id/gaA"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:text="遊戲區"
        android:layout_below="@+id/gaCard1"
        android:layout_centerHorizontal="true" />




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button android:id="@+id/gaCard1"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:text="卡片1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/gaCard2"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:text="卡片2"

        android:layout_alignTop="@+id/gaStopBu"
        android:layout_alignLeft="@+id/gaStopBu"
        android:layout_alignStart="@+id/gaStopBu" />


    <Button android:id="@+id/gaCard3"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:text="卡片3"

        android:layout_above="@+id/gaA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
